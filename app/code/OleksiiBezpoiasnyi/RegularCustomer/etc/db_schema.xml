<?xml version="1.0"?>
<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="oleksiib_regular_customer" resource="default" engine="innodb" comment="Regular Customer">
        <column xsi:type="int"
                name="request_id"
                padding="10"
                unsigned="true"
                nullable="false"
                identity="true"
                comment="Request ID"
        />
        <column xsi:type="int"
                name="customer_id"
                padding="10"
                unsigned="true"
                nullable="true"
                comment="Customer ID"
        />
        <column xsi:type="int"
                name="product_id"
                padding="10"
                unsigned="true"
                nullable="true"
                comment="Product ID"
        />
        <column xsi:type="varchar"
                name="name"
                nullable="false"
                length="255"
                comment="Name"
        />
        <column xsi:type="varchar"
                name="email"
                nullable="false"
                length="255"
                comment="Email"
        />
        <column xsi:type="tinyint"
                name="email_sent"
                padding="7"
                default="0"
                unsigned="true"
                nullable="true"
                comment="Email Sent"
        />
        <column xsi:type="smallint"
                name="website_id"
                padding="5"
                unsigned="true"
                nullable="true"
                comment="Website ID"
        />
        <column xsi:type="smallint"
                name="status"
                padding="2"
                unsigned="true"
                nullable="false"
                comment="Status"
        />
        <column xsi:type="int"
                name="discount_size"
                padding="10"
                unsigned="true"
                nullable="true"
                comment="Discount Size"
        />
        <column xsi:type="int"
                name="admin_user_id"
                padding="10"
                unsigned="true"
                nullable="true"
                comment="Admin ID"
        />
        <column xsi:type="timestamp"
                name="created_at"
                on_update="false"
                nullable="false"
                default="CURRENT_TIMESTAMP"
                comment="Created At"
        />
        <column xsi:type="timestamp"
                name="updated_at"
                on_update="true"
                nullable="false"
                default="CURRENT_TIMESTAMP"
                comment="Updated At"
        />
        <column xsi:type="timestamp"
                name="status_changed_at"
                on_update="true"
                nullable="false"
                comment="Status Changed At"
        />
        <column xsi:type="decimal"
                name="discount_percent"
                scale="4"
                precision="20"
                nullable="true"
                comment="Discount Percent"
        />
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="request_id"/>
        </constraint>
        <index referenceId="OLEKSIIB_REGULAR_CUSTOMER_CUSTOMER_ID" indexType="btree">
            <column name="customer_id"/>
        </index>
        <index referenceId="OLEKSIIB_REGULAR_CUSTOMER_PRODUCT_ID" indexType="btree">
            <column name="product_id"/>
        </index>
        <index referenceId="OLEKSIIB_REGULAR_CUSTOMER_WEBSITE_ID" indexType="btree">
            <column name="website_id"/>
        </index>
        <index referenceId="OLEKSIIB_REGULAR_CUSTOMER_ADMIN_USER_ID" indexType="btree">
            <column name="admin_user_id"/>
        </index>
        <constraint xsi:type="foreign"
                    referenceId="OLEKSIIB_REGULAR_CSTR_CSTR_ID_CSTR_ENTT_ENTT_ID"
                    table="oleksiib_regular_customer"
                    column="customer_id"
                    referenceTable="customer_entity"
                    referenceColumn="entity_id"
                    onDelete="SET NULL"
        />
        <constraint xsi:type="foreign"
                    referenceId="OLEKSIIB_REGULAR_CSTR_PRCT_ID_CAT_PRCT_ENTT_ENTT_ID"
                    table="oleksiib_regular_customer"
                    column="product_id"
                    referenceTable="catalog_product_entity"
                    referenceColumn="entity_id"
                    onDelete="SET NULL"
        />
        <constraint xsi:type="foreign"
                    referenceId="OLEKSIIB_REGULAR_CSTR_WS_ID_STORE_WS_WS_ID"
                    table="oleksiib_regular_customer"
                    column="website_id"
                    referenceTable="store_website"
                    referenceColumn="website_id"
                    onDelete="SET NULL"
        />
        <constraint xsi:type="foreign"
                    referenceId="OLEKSIIB_REGULAR_CUSTOMER_ADMIN_USER_ID_ADMIN_USER_USER_ID"
                    table="oleksiib_regular_customer"
                    column="admin_user_id"
                    referenceTable="admin_user"
                    referenceColumn="user_id"
                    onDelete="SET NULL"
        />
    </table>
    <table name="quote" resource="default" engine="innodb">
        <column xsi:type="decimal"
                name="personal_discount"
                scale="4"
                precision="20"
                nullable="true"
                comment="Personal Discount"
        />
        <column xsi:type="decimal"
                name="base_personal_discount"
                scale="4"
                precision="20"
                nullable="true"
                comment="Base Personal Discount"
        />
    </table>
    <table name="sales_order" resource="default" engine="innodb">
        <column xsi:type="decimal"
                name="personal_discount"
                scale="4"
                precision="20"
                nullable="true"
                comment="Personal Discount"
        />
        <column xsi:type="decimal"
                name="base_personal_discount"
                scale="4"
                precision="20"
                nullable="true"
                comment="Base Personal Discount"
        />
    </table>
</schema>
